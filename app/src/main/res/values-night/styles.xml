<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="All_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/size_menu_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Text_1" parent="All_text">
        <item name="android:layout_marginStart">@dimen/text_start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_of_button</item>
    </style>

    <style name="Text_settings" parent="All_text">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Images_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/wright_padding_icons</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Button_basic" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">?attr/colorOnPrimary</item>
        <item name="android:spotShadowAlpha">?attr/colorOnPrimary</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="Button_Main_act" parent="Button_basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginTop">@dimen/between_button_pending</item>
        <item name="android:layout_marginStart">@dimen/start_button_pending</item>
        <item name="android:layout_marginEnd">@dimen/end_button_pending</item>
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">@dimen/text_of_button</item>
        <item name="cornerRadius">@dimen/corner_of_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_mm</item>
        <item name="iconTint">@color/black1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>


    </style>

    <style name="Edit_text_basic">
        <item name="android:background">@drawable/rounding_of_edittext</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/size_menu_text</item>
    </style>

</resources>