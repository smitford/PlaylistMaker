<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    android:orientation="vertical"
    android:padding="@dimen/padding_of_all_items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/panel_header"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="304">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white" />
            <Button
                android:layout_width="@dimen/button_size"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

        </FrameLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="48"
            android:visibility="invisible"/>

    </LinearLayout>
    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/start_button_pending"
        android:layout_marginEnd="@dimen/end_button_pending"
        android:gravity="center"
        android:text="@string/search"
        android:textColor="@color/black1"
        android:textSize="@dimen/text_of_button"
        android:textAllCaps="false"
        app:icon = "@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_mm"
        app:iconTint="@color/black1"
        app:cornerRadius="@dimen/corner_of_button"/>

    <Button
        android:id="@+id/media_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/start_button_pending"
        android:layout_marginTop="@dimen/between_button_pending"
        android:layout_marginEnd="@dimen/end_button_pending"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/media"
        android:textAllCaps="false"
        android:textColor="@color/black1"
        android:textSize="@dimen/text_of_button"
        app:icon = "@drawable/library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_mm"
        app:iconTint="@color/black1"
        app:cornerRadius="@dimen/corner_of_button"/>
    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:layout_marginTop="@dimen/between_button_pending"
        android:layout_marginStart="@dimen/start_button_pending"
        android:layout_marginEnd="@dimen/end_button_pending"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="@string/settings"
        android:textColor="@color/black1"
        android:textSize="@dimen/text_of_button"
        android:textAllCaps="false"
        app:icon = "@drawable/vector"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding_mm"
        app:iconTint="@color/black1"
        app:cornerRadius="@dimen/corner_of_button"/>

</LinearLayout>
