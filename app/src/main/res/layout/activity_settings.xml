<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/padding_of_all_items">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/panel_header"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            style="@style/Button_basic"
            android:outlineSpotShadowColor = "?attr/colorOnPrimary"
            app:icon="@drawable/arrow_back"
            app:iconTint="?attr/colorOnSecondary" />

        <TextView
            style="@style/Text_1"
            android:text="@string/settings"
            android:textColor="?attr/colorOnSecondary" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_of_basic_stripe"
        android:layout_marginTop="@dimen/top_step"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_settings"
            android:text="@string/black_them" />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/wright_padding_icons" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_of_basic_stripe"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_settings"
            android:text="@string/share_app" />

        <ImageView
            android:id="@+id/shear_button"
            style="@style/Images_settings"
            android:src="@drawable/share" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_of_basic_stripe"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_settings"
            android:text="@string/write_to_sup" />

        <ImageView
            android:id="@+id/support_button"
            style="@style/Images_settings"
            android:src="@drawable/support" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_of_basic_stripe"
        android:orientation="horizontal">

        <TextView
            style="@style/Text_settings"
            android:text="@string/terms_of_use" />

        <ImageView
            android:id="@+id/terms_of_use_button"
            style="@style/Images_settings"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>

</LinearLayout>